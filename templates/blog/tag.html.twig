{% extends 'base.html.twig' %}

{% block title %}All articles by Tag: {{ tag.name }}{% endblock %}

{% block body %}

    <h1>All articles with the same tag : {{ tag.name }}</h1>
    {% for article in articles %}
        <section class="m-5">
        <div>
            <h2>{{ loop.index }} / {{ article.title }} - Category : {{ article.category.name }}</h2>
            <p>{{ article.content }}</p>
            <p>Id de l'article : {{ article.id }}</p>
            <a href="{{ path('show_ById', { 'id': article.id }) }}" class="btn btn-dark">Lire la suite </a>
        </div>
    </section>
    {% else %}
        Aucun article trouv√©.
    {% endfor %}
    <a href="{{ path('app_index') }}">
        Back to homepage.
    </a>
{% endblock %}